pipeline {
    agent any

    environment {
        IMAGE_TAG = "latest"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Push Podman Image') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub-credentials',
                        usernameVariable: 'DOCKERHUB_CREDENTIALS_USR',
                        passwordVariable: 'DOCKERHUB_CREDENTIALS_PSW'
                    )]) {
                        sh """
                            echo ${DOCKERHUB_CREDENTIALS_PSW} | podman login docker.io -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin
                            podman build -t ${DOCKERHUB_CREDENTIALS_USR}/flask-app-example:${IMAGE_TAG} .
                            podman push ${DOCKERHUB_CREDENTIALS_USR}/flask-app-example:${IMAGE_TAG}
                        """
                    }
                }
            }
        }

        stage('Helm Deploy') {
            when {
                expression { return currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                sh """
                    helm upgrade --install flask-app ./charts/flask-app -n formazione-sou --create-namespace
                """
            }
        }
    }

    post {
        failure {
            echo "Deploy fallito!"
        }
    }
}


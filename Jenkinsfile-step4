pipeline {
    agent any

    environment {
        IMAGE_TAG = "latest"
    }

    stages {

        stage('Check Credentials') {
            steps {
                script {
                    def creds = com.cloudbees.plugins.credentials.CredentialsProvider.lookupCredentials(
                        com.cloudbees.plugins.credentials.common.StandardCredentials,
                        Jenkins.instance,
                        null,
                        null
                    )
                    println "=== CREDENZIALI DISPONIBILI SU QUESTO JENKINS ==="
                    creds.each { println "- ID: ${it.id}  |  TYPE: ${it.class}" }
                    println "=================================================="
                }
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'docker hub credentials',
                        usernameVariable: 'DOCKERHUB_CREDENTIALS_USR',
                        passwordVariable: 'DOCKERHUB_CREDENTIALS_PSW'
                    )]) {
                        sh """
                            echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin
                            docker build -t ${DOCKERHUB_CREDENTIALS_USR}/flask-app-example:${IMAGE_TAG} .
                            docker push ${DOCKERHUB_CREDENTIALS_USR}/flask-app-example:${IMAGE_TAG}
                        """
                    }
                }
            }
        }

        stage('Helm Deploy') {
            when {
                expression { return currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                sh """
                    helm upgrade --install flask-app ./charts/flask-app -n formazione-sou --create-namespace
                """
            }
        }
    }

    post {
        failure {
            echo "Deploy fallito!"
        }
    }
}

